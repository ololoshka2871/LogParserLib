<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="{Binding #msgBoxText.Width}" Height="128">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="{Binding $parent.Width}" Height="{Binding $parent.Height}">
        
        <TextBlock Text="Hello World!" Name="msgBoxText" HorizontalAlignment="Center" Margin="24 24 24 12"></TextBlock>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Name="msgBoxOkBtn" Margin="12 24 12 12">
                OK
            </Button>
            <Button Name="msgBoxYesBtn" Margin="12 24 12 12">
                Yes
            </Button>
            <Button Name="msgBoxCancelBtn" Margin="12 24 12 12">
                Cancel
            </Button>
            <Button Name="msgBoxNoBtn" Margin="12 24 12 12">
                No
            </Button>
            <Button Name="msgBoxRetryBtn" Margin="12 24 12 12">
                Retry
            </Button>
        </StackPanel>

    </StackPanel>
</Window>