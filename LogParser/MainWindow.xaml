<Window 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="LogParser.MainWindow"
	  Title="Анализ csv отчётов"
	  Height="100"
	  Width="200">
    <DockPanel>
      <Button
			      HorizontalAlignment="Stretch"
			      VerticalAlignment="Stretch"
			      IsDefault="True"
			      HorizontalContentAlignment="Center"
			      VerticalContentAlignment="Center"
			      FontSize="14"
			      FontStyle="Italic"
			      Name="getFileBtn">
            <Button.Content>
                <TextBlock
					          Text="Открыть файл..."
					          FontWeight="Bold"
                    FontSize="20"/>
            </Button.Content>
        </Button>
    </DockPanel>
</Window>